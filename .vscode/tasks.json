{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceRoot}${config:languageServerPath}/Ubictionary.LanguageServer.fsproj",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "options": {
                "cwd": "${workspaceFolder}${config:languageServerPath}"
            },
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build tests",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceRoot}${config:languageServerTestsPath}/Ubictionary.LanguageServer.Tests.fsproj",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "options": {
                "cwd": "${workspaceFolder}${config:languageServerTestsPath}"
            },
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch tests",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "watch",
                "run"
            ],
            "options": {
                "cwd": "${workspaceFolder}${config:languageServerTestsPath}"
            },
            "group": "test",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build vsCode extension",
			"type": "npm",
			"script": "compile",
			"problemMatcher": "$fable-webpack",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "builders"
			},
			"group": "build",
            "options": {
                "cwd": "${workspaceFolder}${config:vsCodeExtensionPath}"
            },
		},
		{
            "label": "build vsCode extension tests",
			"type": "npm",
			"script": "compile-tests",
			"problemMatcher": "$fable-webpack",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "builders"
			},
			"group": "build",
            "options": {
                "cwd": "${workspaceFolder}${config:vsCodeExtensionPath}"
            },
		},
		{
			"label": "vsCode extension tests",
			"dependsOn": [
				"build vsCode extension",
				"build vsCode extension tests"
			],
			"problemMatcher": []
		}
    ]
}