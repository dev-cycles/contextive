    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Language Server Tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build tests",
            "program": "${workspaceFolder}${config:languageServerTestsPath}/bin/Debug/net6.0/Ubictionary.LanguageServer.Tests.dll",
            "args": [],
            "cwd": "${workspaceFolder}${config:languageServerTestsPath}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Language Server",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}${config:languageServerPath}/bin/Debug/net6.0/Ubictionary.LanguageServer",
            "args": [ ],
            "cwd": "${workspaceFolder}${config:languageServerPath}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Run VsCode Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}${config:vsCodeExtensionPath}"
            ],
            "outFiles": [
                "${workspaceFolder}${config:vsCodeExtensionPath}/dist/**/*.js"
            ],
            "preLaunchTask": "build vsCode extension"
        },
        {
            "name": "VsCode Extension Tests",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}${config:vsCodeExtensionPath}",
                "--extensionTestsPath=${workspaceFolder}${config:vsCodeExtensionPath}/out/index"
            ],
            "outFiles": [
                "${workspaceFolder}${config:vsCodeExtensionPath}/out/**/*.js",
                "${workspaceFolder}${config:vsCodeExtensionPath}/dist/**/*.js"
            ],
            "preLaunchTask": "vsCode extension tests"
        }
    ]
}