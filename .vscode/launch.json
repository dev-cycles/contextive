{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch VsCode Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/${config:vsCodeExtensionPath}",
                "${workspaceRoot}/src/vscode/ubictionary/test/fixtures/simple_workspace"
            ],
            "outFiles": [
                "${workspaceFolder}/${config:vsCodeExtensionPath}/dist/**/*.js"
            ],
            "preLaunchTask": "build: VsCode Extension"
        },
        {
            "name": "Attach to Language Server",
            "type": "coreclr",
            "request": "attach",
        },
        {
            "name": "Language Server Tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build: Language Server Tests",
            "program": "${workspaceFolder}/${config:languageServerTestsPath}/bin/Debug/net6.0/Ubictionary.LanguageServer.Tests.dll",
            "args": [],
            "cwd": "${workspaceFolder}/${config:languageServerTestsPath}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "VsCode Extension Tests",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/${config:vsCodeExtensionPath}",
                "--extensionTestsPath=${workspaceFolder}/${config:vsCodeExtensionPath}/out/index",
                "${workspaceRoot}/src/vscode/ubictionary/test/fixtures/simple_workspace"
            ],
            "outFiles": [
                "${workspaceFolder}/${config:vsCodeExtensionPath}/out/**/*.js",
                "${workspaceFolder}/${config:vsCodeExtensionPath}/dist/**/*.js"
            ],
            "preLaunchTask": "build: VsCode Extension Tests"
        }
    ],
    "compounds": [
        {
            "name": "Launch Extension + Language Server",
            "configurations": ["Launch VsCode Extension", "Attach to Language Server"]
        }
    ]
}